" Use system Python instead of whatever is activated
if exists("$VIRTUAL_ENV")
    let g:python3_host_prog=substitute(system("which -a python3 | head -n2 | tail -n1"), "\n", '', 'g')
else
    let g:python3_host_prog=substitute(system("which python3"), "\n", '', 'g')
endif

call plug#begin('~/.vim/plugged')
if has('nvim')
  Plug 'Shougo/deoplete.nvim', { 'do': ':UpdateRemotePlugins' }
else
  Plug 'Shougo/deoplete.nvim'
  Plug 'roxma/nvim-yarp'
  Plug 'roxma/vim-hug-neovim-rpc'
endif

let g:deoplete#enable_at_startup = 1

Plug 'navicore/vissort.vim'
Plug 'tpope/vim-surround'

Plug 'luochen1990/rainbow'
let g:rainbow_active = 1 "set to 0 if you want to enable it later via :RainbowToggle

Plug 'junegunn/goyo.vim'

Plug 'lervag/vimtex'
let g:tex_flavor='latex'
let g:vimtex_view_method='zathura'
let g:vimtex_quickfix_mode=2
"disable all warnings
let g:vimtex_quickfix_latexlog = {'default' : 0}
let g:vimtex_quickfix_open_on_warning = 0
" Disable overfull/underfull \hbox and all package warnings
" let g:vimtex_quickfix_latexlog = {
    "   'overfull' : 0,
    "   'underfull' : 0,
    "   'packages' : {
    "     'default' : 0,
    "   },
    "  }
let g:vimtex_compiler_progname = 'nvr'

Plug 'KeitaNakamura/tex-conceal.vim'
set conceallevel=2
let g:tex_conceal='abdmg'

Plug 'morhetz/gruvbox'

Plug 'SirVer/ultisnips'
let g:UltiSnipsExpandTrigger = '<tab>'
let g:UltiSnipsJumpForwardTrigger = '<tab>'
let g:UltiSnipsJumpBackwardTrigger = '<c-k>'
let g:UltiSnipsListSnippets = '<s-tab>'

Plug 'honza/vim-snippets'

"Plug 'zxqfl/tabnine-vim'
"let g:ycm_key_list_select_completion=[]
"let g:ycm_key_list_previous_completion=[]

Plug '907th/vim-auto-save'
let g:auto_save = 1
			
Plug 'tpope/vim-unimpaired'

Plug 'kana/vim-textobj-user'
Plug 'kana/vim-textobj-line'
call plug#end()

" editor
set number
set ts=4 sw=4
autocmd InsertEnter,InsertLeave * set cul!

setlocal spell
set spelllang=en_us
autocmd VimEnter * hi SpellBad ctermfg=NONE ctermbg=NONE cterm=underline
" imap <C-s> <c-g>u<Esc>[s1z=`]a<c-g>u

imap jk <Esc>
" Disabled due to get rid of lag for 'mk'
" imap kj <Esc> 
imap JK <Esc>
imap KJ <Esc>

" new line without entering Insert mode
nmap <silent> [<space>  :<c-u>put!=repeat([''],v:count)<bar>']+1<cr>
nmap <CR> o<Esc>

" theme (must be after plugins)
let g:gruvbox_guisp_fallback = "bg"
colorscheme gruvbox
set bg=dark

" auto resize quickfix
au FileType qf call AdjustWindowHeight(3, 10)
function! AdjustWindowHeight(minheight, maxheight)
  exe max([min([line("$"), a:maxheight]), a:minheight]) . "wincmd _"
endfunction

set clipboard^=unnamed
set mouse=a

" Time out for key mapping and sequence respectively
set timeoutlen=500
set ttimeoutlen=0

" Trigger filetype based plugins and indentations
filetype plugin indent on

" Relative numbering
set number relativenumber

" to make Vimâ€™s :! shell behave like your command prompt
" set shellcmdflag=-ic

" Use the appropriate number of spaces instead of tab, and set tab size to 2
set expandtab
set tabstop=2
" Shift to the next round tab stop. 
set shiftround
set shiftwidth=2
set softtabstop=2

" Never scroll all the way to the bottom of the page
set scrolloff=3

" Set all registers to clipboard. Maybe change at a later date to better take
" advantage of registers
set clipboard=unnamedplus

" Highlight while search
set incsearch
" Enable Highlight Search
set hlsearch
set ignorecase
" Overrides ignorecase if pattern contains upcase
set smartcase
" Press <leader> Enter to remove search highlights
map <silent> <leader><cr> :noh<cr>

" Wildmenu better complete
set wildmenu
set wildmode=longest:list,full

" Splits open at the bottom and right:
set splitbelow splitright


"" Commands

" Write to read only file
cmap w!! w !sudo tee % >/dev/null


"" Mappings

" C-v to paste in insert mode
imap <c-v> <esc>:set paste<cr>a<c-r>=getreg('+')<cr><esc>:set nopaste<cr>mi`[=`]`ia

" In insert or command mode, move normally by using Ctrl
imap <C-h> <Left>
imap <C-j> <Down>
imap <C-k> <Up>
imap <C-l> <Right>
cmap <C-h> <Left>
cmap <C-j> <Down>
cmap <C-k> <Up>
cmap <C-l> <Right>

" Quickly source .vimrc
nmap <leader>r :source $MYVIMRC <bar> :call UltiSnips#RefreshSnippets()<CR>
" Select all text
nmap vA ggVG

" Quick Save not shift s due to IdeaVim problems
nmap <C-s> :w<CR>
imap <C-s> <esc>:w<CR>i<Right>

" Yank to end of line
nmap Y y$
"Delete to the end of line
nmap D d$

map <Up> <NOP>
map <Down> <NOP>
map <Left> <NOP>
map <Right> <NOP>

" use Ctrl-^ to toggle "Caps Lock"
" Execute 'lmap x X' and 'lmap X x' for each letter a-z.
for c in range(char2nr('A'), char2nr('Z'))
  execute 'lmap ' . nr2char(c+32) . ' ' . nr2char(c)
  execute 'lmap ' . nr2char(c) . ' ' . nr2char(c+32)
endfor

" Kill the capslock when leaving insert mode.
autocmd InsertLeave * set iminsert=0

